{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "lib": ["es6", "es7"],
    "strict": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
