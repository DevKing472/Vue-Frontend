{
  "name": "root",
  "private": true,
  "scripts": {
    "build:composables": "cd packages/composables && yarn build",
    "build:core": "cd packages/core && tsc",
    "build:api-client": "cd packages/api-client && yarn build",
    "build:docs": "cd packages/docs && yarn build",
    "build:tools": "yarn build:core && yarn build:api-client && yarn build:composables",
