    "build": "cd packages/theme && yarn build",
    "dev": "cd packages/theme && yarn dev"
  },
  "devDependencies": {
    "lerna": "^3.15.0",
    "webpack-bundle-analyzer": "^3.5.2"
  },
  "workspaces": {
    "packages" : ["packages/*"],
    "nohoist": ["**/**/**"]
  }
}
